.container{
	margin:0rpx 0rpx 0rpx 0rpx;
}
.navigator{

}
.wrap{
    display: -webkit-flex;
    border-bottom: 2rpx solid #eee;
}
.image{
    flex:0.85;
    padding: 10rpx 0rpx 10rpx 0rpx;
    border-radius: 10rpx;
}
.content{
    flex:4.5;
    padding:0rpx 15rpx 0rpx 0rpx;
    font-size: 28rpx;
    max-width: 400rpx;
    overflow: hidden;
    height: 115rpx;
}
.date{
    flex:1.5;
    width:200rpx;
    overflow: hidden;
    padding-top: 10rpx;
    height:45rpx;
    font-size: 24rpx;
    color: #999999;
    text-align: right;
}
.title{
    padding-top: 10rpx;
}
.text{
    padding-top: 20rpx;
    color: #666666;
}
.dot1{
    flex:0.15;
    height:18rpx;
    width:20rpx;
    background-color:#f0403a;
    position: relative;
    top:0rpx;
    left: -8rpx;
    border-radius: 100%
}
.dot2{
    flex:0.15;
    height:18rpx;
    width:20rpx;
    border-radius: 100%
}