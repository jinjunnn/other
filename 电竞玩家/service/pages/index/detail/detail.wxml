                mode="aspectFill"/>
    </view>

    <view style="flex:6">
        <view style="display: -webkit-flex; justify-content:space-between; font-size:30rpx;margin:20rpx 20rpx 0rpx 0rpx">
          <view style="display: -webkit-flex; justify-content:flex-start; ">
                <view style="margin-right:20rpx; font-weight:bold;">{{user.targetUser.nickname}}</view>
<!--                 <view class="age">
                    <image src="/image/声音.png" class="ageIcon"></image>
