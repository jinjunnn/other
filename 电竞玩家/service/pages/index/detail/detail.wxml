<view class="wrap2">
    <view wx:for="{{comment}}" wx:key="commentItem">
          <view class="container">
          <view style="display: -webkit-flex;margin-top:30rpx;margin-bottom:30rpx;">
              <view style="flex: 1;">
                  <image src="{{item.targetFrom.userImage}}" 
                      class="author_icon_item" 
                      style="border-radius: 50%; width:50rpx; height:50rpx;"
                      wx:if="{{item.targetFrom.userImage}}"></image>
                  <image src="https://lc-WekN4hEa.cn-n1.lcfile.com/23979c12745498965953.jpg" 
                      class="author_icon_item" 
                      style="border-radius: 50%; width:50rpx; height:50rpx;"
                      wx:else></image>
              </view>
              <view style="flex:7">
                  <view class="title_item" id="changecolor" wx:if="{{item.targetFrom.userName}}">{{item.targetFrom.userName}}</view>
                  <view class="title_item" id="changecolor" wx:else>匿名用户</view>
                  <view style="font-size:10pt; color:#666">{{item.updatedAt}}</view>
              </view>
          </view>

          <view style="font-size:10pt; color:#666">{{item.comment}}</view>
      </view>

  </view>
</view>


