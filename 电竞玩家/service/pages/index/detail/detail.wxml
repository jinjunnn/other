    <swiper-item>
          <image  src="{{user.targetUser.image}}" style="width:750rpx; height:500rpx" mode="aspectFill"></image>
    </swiper-item>
    <block wx:if="{{user.userImages.images}}" wx:for="{{user.userImages.images}}" wx:key="images"> 
        <swiper-item>
            <image src="{{item}}" style="width:750rpx; height:500rpx" mode="aspectFill"></image>
        </swiper-item>
    </block>
    <block wx:if="{{user.combatImages.images}}" wx:for="{{user.combatImages.images}}" wx:key="images"> 
        <swiper-item>
            <image src="{{item}}" style="width:750rpx; height:500rpx" mode="scaleToFill"></image>
        </swiper-item>
    </block>
</swiper>


<view style="display: -webkit-flex; justify-content:space-around;">
    <view style="flex:1.5">
